<html>
    <head>
        <meta charset="UTF-8">
        <title>Lista de tareas</title>
        <link rel="stylesheet" type="text/css" href="https://stackpath.bootstrapcdn.com/bootstrap/4.1.3/css/bootstrap.min.css">
    </head>
    <body>
            <%include partials/header.ejs%>
            <div class="container">
            <div class="col-md-5">
                    <div class="card">
                        <div class="card-body">
                            <form action="/update/<%=personaBuscada._id%>" method="POST">
                                <div class="form-group">
                                    <label for="">Nombre:</label>
                                    <input type="text" name="nombre" class="form-control"  value="<%=personaBuscada.nombre%>">
                                </div>
                                <div class="form-group">
                                    <label for="">Tel:</label>
                                    <input type="text" name="tel" class="form-control" value="<%=personaBuscada.tel%>">
                                </div>
                                <div class="form-group">
                                    <input type="submit" class="btn btn-success btn-block">
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
    </body>
</html>
